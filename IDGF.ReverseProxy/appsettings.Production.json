      "core_route": {
        "ClusterId": "core_cluster",
        "Match": {
          "Path": "core/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthenticatedUser",
        "Transforms": [
          { "PathRemovePrefix": "core" }
        ]
      }
    },
    "Clusters": {
      "auth_cluster": {
        "Destinations": {
          "auth_destination": {
            "Address": "http://localhost:8089/"
          }
        }
      },
      "core_cluster": {
        "Destinations": {
          "core_destination": {
            "Address": "http://localhost:8090/"
          }
        }
      }
    }
  }
